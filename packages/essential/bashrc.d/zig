zigtags() {
    local original_dir=$(pwd)
    
    # Check if zig is checked out
    if [ -d "$HOME/Projects/zig/lib/std/" ]; then
        echo "Running ctags -R in ~/Projects/zig/lib/std/"
        cd "$HOME/Projects/zig/lib/std/" && ctags -R
        echo "ctags completed."
    else
        echo "Directory ~/Projects/zig/lib/std/ does not exist."
    fi
    
    # Return to original directory
    cd "$original_dir"
}

# vim: set ft=bash:
