# Here are my user configurations.
[user]
        name = Eric Seuret
        email = eric@ericst.ch

# This is the default behavior, nonetheless, I make sure of it.
[push]
        default = simple

# Default for new branches.
[init]
	defaultBranch = main

# Cache credential when working with https-only remotes.
[credential]
	helper = cache --timeout=14400

# Using nvim as diff tool
[difftool]
    prompt = true
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d \"$REMOTE\" \"$LOCAL\""
