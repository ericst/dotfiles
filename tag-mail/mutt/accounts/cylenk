set sendmail    = "/usr/bin/msmtp -a cylenk"
set mbox        = "+cylenk/Archive"
set postponed   = "+cylenk/Drafts"
set record      = "+cylenk/Sent"

set signature = "~/.mutt/signatures/cylenk"

macro index,pager A "<save-message>+cylenk/Archive<enter>" "Achive"
macro index,pager D "<save-message>+cylenk/Trash<enter>" "Move to Trash"
macro index,pager S "<save-message>+cylenk/Junk<enter>"  "Move to Spam"