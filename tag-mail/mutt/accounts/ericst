set from        = "eric@ericst.ch"
set sendmail    = "/usr/bin/msmtp -a ericst"
set mbox        = "+ericst/Archive"
set postponed   = "+ericst/Drafts"
set record      = "+ericst/Sent"

set signature = "~/.mutt/signatures/ericst"

macro index,pager A "<save-message>+ericst/Archive<enter>" "Achive"
macro index,pager D "<save-message>+ericst/Trash<enter>" "Move to Trash"
macro index,pager S "<save-message>+ericst/Junk<enter>"  "Move to Spam"